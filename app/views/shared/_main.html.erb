<div class="py-10">
  <header class="pb-10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between">
      <h1 class="text-3xl font-bold leading-tight text-gray-900"><%= title %></h1>

      <% if defined? links %>
        <div class="flex justify-between items-center">
          <% links.each do |(link_title, link_path)| %>
            <%= link_to(link_title, link_path, class: 'rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </header>
  <main>
    <%= yield %>
  </main>
</div>